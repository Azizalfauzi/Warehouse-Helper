<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragment.OnboardingSatu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TODO: Update blank fragment layout -->

            <ImageView
                android:id="@+id/iv_tambahbarang"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="110dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_undraw_logistics_x4dc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_tambahbarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/raleway"
                android:text="@string/tambah_barang"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/test_background"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_tambahbarang" />

            <TextView
                android:id="@+id/tv_kalimatsatu"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/raleway_light"
                android:text="Tambah Barang jadi"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_tambahbarang" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="250dp"
                android:layout_marginBottom="60dp"
                android:src="@drawable/ic_group_satu"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_kalimatsatu" />

            <Button
                android:id="@+id/btn_nextsatu"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_marginStart="65dp"
                android:fontFamily="@font/raleway_medium"
                android:text="@string/next"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                app:backgroundTint="@color/test_background"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView" />

            <TextView
                android:id="@+id/textView59"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/raleway_light"
                android:text="lebih mudah dan effisien"
                android:textColor="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="@+id/tv_kalimatsatu"
                app:layout_constraintStart_toStartOf="@+id/tv_kalimatsatu"
                app:layout_constraintTop_toBottomOf="@+id/tv_kalimatsatu" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>